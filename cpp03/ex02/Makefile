CXXFLAGS= -Werror -Wall -Wextra
CXX=c++
SRCS=ClapTrap.cpp\
	FragTrap.cpp\
	main.cpp\
	ScavTrap.cpp\
NAME=FragTrap
OBJS=$(SRCS:.cpp=.o)

all: $(NAME)

$(NAME): $(OBJS)
	$(CXX) $(CXXFLAGS) $(OBJS) -o $(NAME)

%.o: %.c
	$(CXX) $(CXXFLAGS) -c $< -o $@	

clean:
	rm $(OBJS)

fclean: clean
	rm $(NAME)

re: fclean all
