CXXFLAGS= -Werror -Wall -Wextra
CXX=c++
SRCS=main.cpp\
		contact.cpp\
		PhoneBook.cpp
NAME=phonebook
OBJS=$(SRCS:.cpp=.o)
RM=rm -f
all: $(NAME)

$(NAME): $(OBJS)
	$(CXX) $(CXXFLAGS) $(OBJS) -o $(NAME)

%.o: %.c
	$(CXX) $(CXXFLAGS) -c $< -o $@

clean:
	$(RM) $(OBJS)

fclean: clean
	$(RM) $(NAME)

re: fclean all
